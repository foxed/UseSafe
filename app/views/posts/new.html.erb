<%= form_for @post do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br/>
  <%= form.label :url %>
  <%= form.text_field :url %> <br/>
  <%= form.label :description %> <br />
  <%= form.text_area :description %> <br/>
  <%= form.submit(@post.new_record? ? "Create Post") %>
<% end %>
